{
  "name": "@cpdevtools/lib-node-utilities",
  "version": "0.4.24",
  "repository": "https://github.com/cpdevtools/lib-node-utilities",
  "typings": "./index.d.ts",
  "main": "./index.js",
  "engines": {
    "node": ">=14.16"
  },
  "scripts": {
    "prepare": "run-s prepare:* && husky install",
    "prepare:husky": "husky install",
    "prepare:remove-tags": "git tag | xargs git tag -d",
    "prepare:build": "pnpm run build",
    "prepare:link": "cd ./dist && pnpm unlink && pnpm link --global",
    "build": "run-s build:*",
    "build:ts": "tsc -p tsconfig.json",
    "build:copy-package": "ts-node .scripts/copy-package.ts",
    "pack": "run-s pack:*",
    "pack:build": "pnpm run build",
    "pack:pack": "cd dist && mkdir ./pack && pnpm pack --pack-destination ./pack",
    "release": "run-s release:*",
    "release:build": "pnpm run build",
    "release:publish": "pnpm publish ./dist --access public --publish-branch 'release/latest'",
    "npm:release": "run-s npm:release:*",
    "npm:release:publish": "pnpm publish ./dist --access public --publish-branch 'release/latest'",
    "fix": "run-s fix:*",
    "fix:prettier": "prettier --write --ignore-unknown .",
    "pre-commit": "echo pre-commit",
    "watch:build": "tsc -p tsconfig.json -w",
    "reset-hard": "git clean -dfx && git reset --hard && pnpm i",
    "start": "run-p start:*",
    "start:build": "pnpm run watch:build"
  },
  "devDependencies": {
    "@types/cli-progress": "^3.11.0",
    "@types/inquirer": "^8.2.1",
    "@types/semver": "^7.3.12",
    "@types/strip-color": "^0.1.0",
    "@types/yargs": "^17.0.10",
    "husky": "^8.0.0",
    "lint-staged": "^13.0.3",
    "npm-run-all2": "^6.0.1",
    "prettier": "^2.7.1"
  },
  "publishConfig": {
    "access": "public"
  },
  "lint-staged": {
    "*": "prettier --write --ignore-unknown"
  },
  "dependencies": {
    "@octokit/rest": "^19.0.3",
    "@types/node": "^18.6.1",
    "axios": "^0.27.2",
    "chalk": "^4.0.0",
    "cli-highlight": "^2.1.11",
    "cli-progress": "^3.11.2",
    "date-fns": "^2.29.1",
    "dependency-graph": "^0.11.0",
    "fast-glob": "^3.2.11",
    "inquirer": "^8.0.2",
    "is-docker": "^2.2.1",
    "is-wsl": "^2.2.0",
    "linq": "^3.2.4",
    "regedit": "^5.1.1",
    "rxjs": "^7.5.6",
    "semver": "^7.3.7",
    "simple-git": "^3.13.0",
    "strip-color": "^0.1.0",
    "ts-node": "^10.9.1",
    "tsimportlib": "^0.0.3",
    "tslib": "^2.4.0",
    "type-fest": "^2.17.0",
    "typescript": "^4.7.4",
    "yaml": "^2.1.1"
  }
}
