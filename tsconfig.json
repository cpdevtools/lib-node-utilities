{
  "compilerOptions": {
    "baseUrl": "src",
    "rootDir": "src",
    "outDir": "dist/mjs",
    "target": "esnext",
    "module": "esnext",
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "esModuleInterop": true,
    "incremental": true,
    "inlineSourceMap": true,
    "moduleResolution": "node",
    "pretty": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true,
    "traceResolution": false,
    "typeRoots": ["node_modules/@types", "src/types"],
    "lib": ["esnext"],
    "types": ["node"]
  },
  "include": ["src"],
  "exclude": ["node_modules/**", "dist"],
  "compileOnSave": false
}
